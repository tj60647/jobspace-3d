// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(cuid())
  title       String
  company     String
  description String?
  applyUrl    String?
  location    String?
  salary      String?
  postedAt    DateTime @default(now())
  embedding   Float[]
  x           Float?
  y           Float?
  z           Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([company, title])
  @@map("jobs")
}

model PcaModel {
  id           String   @id @default(cuid())
  components   Float[]  // Flattened PCA components matrix
  mean         Float[]  // Mean vector for centering
  dimensions   Int      // Number of dimensions (should be 3)
  createdAt    DateTime @default(now())
  
  @@map("pca_models")
}

model IngestionLog {
  id          String   @id @default(cuid())
  source      String   // 'greenhouse', 'lever', etc.
  jobsFound   Int
  jobsAdded   Int
  errors      String[]
  startedAt   DateTime
  completedAt DateTime?
  success     Boolean  @default(false)
  
  @@map("ingestion_logs")
}